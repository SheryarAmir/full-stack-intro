generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  String?
  author    users?  @relation(fields: [authorId], references: [id])
}

model users {
  id         String   @id
  name       String?
  email      String?  @unique
  created_at DateTime @default(now())
  updated_at DateTime
  posts      Post[]
}
